<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:theme="@style/AppThemeStart"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/start_img_logo"
        android:layout_width="167dp"
        android:layout_height="185dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/ic_logo_start" />

    <ImageView
        android:id="@+id/start_img_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/ic_start_curved_top" />

    <ImageView
        android:id="@+id/start_img_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-15dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/ic_start_curved_bottom" />

</RelativeLayout>